<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.homeTransportista.fragments.verRutas.VerRutasFragment">

    <Button
        android:id="@+id/btnActualizar"
        android:layout_width="wrap_content"
        android:paddingHorizontal="10dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:text="actualizar"
        android:background="@drawable/custom_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPaquetes"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnActualizar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/btnIniciarEntregas"
        android:layout_width="156dp"
        android:layout_height="52dp"
        android:layout_margin="26dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/custom_button"
        android:enabled="false"
        android:text="@string/INICIAR_ENTREGAS"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>